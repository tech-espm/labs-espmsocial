	<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400&display=swap" rel="stylesheet">
		<title>Título da Página</title>
		<style type="text/css">
			.centralizar{
				text-align: center;
			}	
			.cadastroBotao{
				text-align: center;
				float:bottom;
   				margin-bottom:15px;
				
			}
			.imagemmargem{
				margin: 50px 0 0;
				padding: 50px;
			}
			.input{
			   width: 390px; 
			   height: 40px;
			   padding: 8px 10px;
			   margin: 10px;
			   border: 2.5px solid #00ace3;
			   caret-color: #00ace3;
			   font-size: 18px;
			   font-family: Quicksand;
			   
			}
			input::placeholder{
				font-size: 18px;
				opacity: 0.5;
				font-family: Quicksand;
			}
			input:focus{
				font-size: 18px;
				padding: 8px 10px;
				width: 390px; 
				height: 40px;
				outline: none;
				font-family: Quicksand;
			}
			
			.cinput, .cinput:focus{
			   width: 240px; 
			   height: 40px;
			   margin: 15px;
			   border: 2.5px solid #00ace3;
			   font-size: 22px;
			   line-height: 22px;
			   color: white;
			   background-color:#00ace3;
			   font-weight: bold;
			   letter-spacing: 1px;
			   font-family: Quicksand;
			}
					
		</style>
				
 	</head>
<body>	

	<!-- <div style="max-width: 400px; margin: 0 auto; padding: 10% 15px;"> -->
		<!-- <div class="panel panel-default no-margin-bottom"> -->
			<div class="panel-body">

				<div class= "centralizar">
					<div class= "imagemmargem">
					<img width="420" src = "imagens/espmsocial1.png">
					</div>
				</div>
				
				<div class="centralizar">
					<input name="login" type="text" id="login" placeholder="Login" class="input" spellcheck="false" />
				</div>
				<div class="centralizar">
					<input name="senha" type="password" id="senha" placeholder="Senha" class="input" />
				</div>
				<% if (mensagem) { %>
				<div class="alert alert-danger"><%=mensagem %></div>
				<% } %>
				<div class = "centralizar" >
				<input type="submit" value="ENTRAR" class="cinput" />
				</div>	
			</div>
		<!-- </div> -->
	<!-- </div> -->



</form>
